<?xml version="1.0"?>
<odoo>
    <data>
        <record id="work_management_completed_mail" model="mail.template">
            <field name="name">Tamamlandı Maili / İş Takip</field>
            <field name="model_id" ref="benart_work_management.model_benart_work_management"/>
            <field name="auto_delete" eval="True"/>
            <field name="email_from">odoo@benart.com.tr</field>
            <field name="email_to">${object.get_email_to()}</field>
            <field name="subject">Tamamlanan İş</field>
            <field name="body_html">
                Merhabalar,
                \n

                ${(object.id)} numaralı ${(object.work_definiton_summary)} işi ${(object.write_uid.name)} tarafından
                tamamlanmıştır.

                Arz Ederiz.
            </field>

        </record>
    </data>
</odoo>